@model IEnumerable<Lap03WebBanHang.Models.Product>
@{
    ViewData["Title"] = "Home Page";
    var bestSellingProducts = ViewBag.BestSellingProducts as List<Lap03WebBanHang.Models.Product> ?? new List<Lap03WebBanHang.Models.Product>();
}

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="@product.ImageUrl" alt="@product.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text">Giá: @product.Price.ToString(".000") VNĐ</p>
                        <div class="text-center">
                            <a asp-controller="Product" asp-action="Display" asp-route-id="@product.Id"
                               class="btn btn-primary">Xem chi tiết</a>
                            <a asp-controller="ShoppingCart" asp-action="AddToCart"
                               asp-route-productId="@product.Id" asp-route-quantity="1"
                               class="btn btn-success">Thêm vào giỏ</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
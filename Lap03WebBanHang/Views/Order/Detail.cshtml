@model List<Lap03WebBanHang.Models.OrderDetail>

<h2 id="changingTitle" class="text-center" style="font-size: 46px; line-height: 54px; color: #222;">Chi tiết hóa đơn</h2>
<script>
    // Đợi cho trang được tải xong
    document.addEventListener("DOMContentLoaded", function () {
        // Lấy phần tử tiêu đề cần thay đổi màu
        var changingTitle = document.getElementById("changingTitle");

        // Thêm lớp 'changing' để kích hoạt animation
        changingTitle.classList.add("changing");
    });
</script>

<table class="table">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderDetail in Model)
        {
            <tr>
                <td>@orderDetail.Product.Name</td>
                <td>@orderDetail.Quantity</td>
                <td>@orderDetail.Price</td>
            </tr>
        }
    </tbody>
</table>
